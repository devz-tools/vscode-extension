{
  "name": "devz-tools",
  "displayName": "DevZ Tools",
  "description": "A community VSCode extension for developing DayZ mods, mission files, and server experiences.",
  "version": "0.5.2",
  "repository": "https://github.com/devz-tools/vscode-extension",
  "publisher": "devz-tools",
  "enforceLspVersion": "0.1.3",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:src/config.cpp"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "enforcescript",
        "aliases": [
          "Enforce Script",
          "enforcescript"
        ],
        "extensions": [
          ".c",
          ".cpp"
        ],
        "filenames": [],
        "filenamePatterns": [
          "**/*.c",
          "**/*.cpp"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/enforce-icon.png",
          "dark": "./images/enforce-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "enforcescript",
        "scopeName": "source.enforce",
        "path": "./syntaxes/enforce.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[enforcescript]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              "entity.name.function.definition.enforce",
              "entity.name.function.call.enforce"
            ],
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": ""
            }
          },
          {
            "scope": [
              "support.type.class.enforce",
              "entity.name.type.class.enforce",
              "entity.other.inherited-class.enforce"
            ],
            "settings": {
              "foreground": "#4FC1FF",
              "fontStyle": ""
            }
          },
          {
            "scope": [
              "support.type.primitive.enforce"
            ],
            "settings": {
              "foreground": "#569CD6",
              "fontStyle": ""
            }
          },
          {
            "scope": [
              "support.type.builtin.enforce"
            ],
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": ""
            }
          },
          {
            "scope": [
              "storage.type.class.enforce",
              "storage.modifier.enforce",
              "storage.modifier.access.enforce",
              "keyword.control.conditional.enforce",
              "keyword.control.loop.enforce",
              "keyword.control.flow.enforce",
              "keyword.other.enforce"
            ],
            "settings": {
              "fontStyle": ""
            }
          }
        ]
      }
    },
    "commands": [
      {
        "command": "devz-tools.packPBO",
        "title": "DevZ: Pack PBO"
      },
      {
        "command": "devz-tools.startServerAndClient",
        "title": "DevZ: Start Server and Client"
      },
      {
        "command": "devz-tools.wipeServerData",
        "title": "DevZ: Wipe Server Data"
      },
      {
        "command": "devz-tools.wipeClientData",
        "title": "DevZ: Wipe Client Data"
      },
      {
        "command": "devz-tools.openClientDirectory",
        "title": "DevZ: Open DayZ Client Directory"
      },
      {
        "command": "devz-tools.openServerDirectory",
        "title": "DevZ: Open DayZ Server Directory"
      },
      {
        "command": "devz-tools.openToolsDirectory",
        "title": "DevZ: Open DayZ Tools Directory"
      },
      {
        "command": "devz-tools.openProjectDriveDirectory",
        "title": "DevZ: Open DayZ Project Drive Directory"
      },
      {
        "command": "devz-tools.openWorkshopDirectory",
        "title": "DevZ: Open Steam Workshop Directory"
      },
      {
        "command": "devz-tools.showModsSummary",
        "title": "DevZ: Show Mods Summary"
      },
      {
        "command": "devz-tools.showLogs",
        "title": "DevZ: Show Logs"
      },
      {
        "command": "devz-tools.initializeModBoilerplate",
        "title": "DevZ: Initialize Mod Boilerplate"
      },
      {
        "command": "devz-tools.openFileInCustomViewer",
        "title": "DevZ: Open in Custom Viewer"
      },
      {
        "command": "devz-tools.openTypesEditor",
        "title": "DevZ: Open Types Editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "devz-tools.openFileInCustomViewer",
          "when": "!explorerResourceIsFolder",
          "group": "navigation@1"
        },
        {
          "command": "devz-tools.openTypesEditor",
          "when": "resourceFilename == types.xml",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "devz-tools.openFileInCustomViewer",
          "group": "navigation@1"
        },
        {
          "command": "devz-tools.openTypesEditor",
          "when": "resourceFilename == types.xml",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "devz-tools.packPBO",
          "when": "workspaceContains:src/config.cpp"
        },
        {
          "command": "devz-tools.startServerAndClient",
          "when": "workspaceContains:src/config.cpp"
        },
        {
          "command": "devz-tools.wipeServerData",
          "when": "workspaceContains:src/config.cpp"
        },
        {
          "command": "devz-tools.wipeClientData",
          "when": "workspaceContains:src/config.cpp"
        },
        {
          "command": "devz-tools.openClientDirectory"
        },
        {
          "command": "devz-tools.openServerDirectory"
        },
        {
          "command": "devz-tools.openToolsDirectory"
        },
        {
          "command": "devz-tools.openProjectDriveDirectory"
        },
        {
          "command": "devz-tools.openWorkshopDirectory"
        },
        {
          "command": "devz-tools.showModsSummary"
        },
        {
          "command": "devz-tools.showLogs"
        },
        {
          "command": "devz-tools.initializeModBoilerplate"
        },
        {
          "command": "devz-tools.openFileInCustomViewer"
        },
        {
          "command": "devz-tools.openTypesEditor"
        }
      ]
    },
    "configuration": {
      "title": "DevZ Tools",
      "properties": {
        "devz-tools.dayzClientDir": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\DayZ",
          "description": "Absolute path to the DayZ Client installation directory"
        },
        "devz-tools.dayzServerDir": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\DayZServer",
          "description": "Absolute path to the DayZ Server installation directory"
        },
        "devz-tools.dayzToolsDir": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\DayZ Tools",
          "description": "Absolute path to the DayZ Tools installation directory"
        },
        "devz-tools.steamWorkshopDir": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\workshop\\content\\221100",
          "description": "Absolute path to the Steam Workshop content directory for DayZ"
        },
        "devz-tools.dayzProjectDir": {
          "type": "string",
          "default": "P:\\",
          "description": "Absolute to the DayZ Project directory extracted by DayZ Tools. The files in this directory are used as a reference to validate against when checking the mod."
        },
        "devz-tools.modName": {
          "type": "string",
          "default": "MyMod",
          "description": "Name of the mod being developed"
        },
        "devz-tools.serverAddress": {
          "type": "string",
          "default": "127.0.0.1:2302",
          "description": "The IP and Port of the server your client will connect to on startup. Find this by starting the server, then checking the LAN tab in the DayZ Launcher. Each computer may use a different local IP address space."
        },
        "devz-tools.additionalMods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of additional mod paths and IDs to load (e.g., ['C:\\path\\to\\@CustomMod1', 'C:\\path\\to\\@CustomMod2', '1234567890', '0987654321']). These should be either absolute paths to mods stored on your computer, or the numeric Steam Workshop IDs of mods that you are subscribed to."
        },
        "devz-tools.enableModTooltips": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover tooltips and inline hints showing mod names in settings.json files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "clean": "pwsh -ExecutionPolicy Bypass -File scripts/clean.ps1 all",
    "clean:dist": "pwsh -ExecutionPolicy Bypass -File scripts/clean.ps1 dist",
    "clean:bin": "pwsh -ExecutionPolicy Bypass -File scripts/clean.ps1 bin",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:css && node esbuild.js",
    "package": "pnpm run clean:dist && pnpm run check-types && pnpm run lint && pnpm run build:css && pnpm run download:lsp && node esbuild.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "watch:css": "tailwindcss -i ./webview-ui/src/styles.css -o ./dist/styles.css --watch",
    "build:css": "tailwindcss -i ./webview-ui/src/styles.css -o ./dist/styles.css --minify",
    "download:lsp": "pwsh -ExecutionPolicy Bypass -File scripts/download-lsp.ps1",
    "build:lsp": "echo 'Note: build:lsp is deprecated. LSP binaries are now downloaded from GitHub releases. Use download:lsp instead.' && pnpm run download:lsp",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:compile": "tsc -p . --outDir out",
    "test:watch": "tsc -p . -w --outDir out",
    "pretest": "pnpm run test:compile && pnpm run compile",
    "vscode:package": "pnpm run package && pnpm run swap-readme:prepare && vsce package --no-dependencies && pnpm run swap-readme:restore",
    "vscode:publish": "pnpm run package && pnpm run swap-readme:prepare && vsce publish --no-dependencies && pnpm run swap-readme:restore",
    "swap-readme:prepare": "pwsh -ExecutionPolicy Bypass -File scripts/swap-readme.ps1 prepare",
    "swap-readme:restore": "pwsh -ExecutionPolicy Bypass -File scripts/swap-readme.ps1 restore"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.18.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vscode-elements/react-elements": "^2.3.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}